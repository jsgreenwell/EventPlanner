<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="event.HomeController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <GridPane prefHeight="336.0" prefWidth="356.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Enter Name" GridPane.rowIndex="1" />
            <TextField fx:id="txtName" promptText="Enter Name here" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="btnGreet" defaultButton="true" mnemonicParsing="false" onAction="#greetMeActivated" text="Greet Me!" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="nameField" alignment="TOP_CENTER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </TextField>
            <Button fx:id="btnHello" mnemonicParsing="false" text="Say Hi!" GridPane.columnIndex="1" />
         </children>
      </GridPane>
   </children>
</GridPane>
